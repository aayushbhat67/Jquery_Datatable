@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="customerList" class="display">
            <thead>
                <tr>
                    <th>CustomerID</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Office</th>
                    <th>Age</th>
                    <th>Start Date</th>
                </tr>
            </thead>
        </table>
        @section scripts
        {
        <script>
            $(document).ready(function () {
                $("#customerList").DataTable({
                    "ajax": {
                        "url": '@Url.Action("ClientDetail","Home")',
                        "type": "GET",
                        "datatype": "json"

                    },
                    "columns":
                        [
                            { "data": "CustomerID", "bVisible": false, "autowidth": true },
                            { "data": "Name", "autowidth": true },
                            { "data": "Position", "autowidth": true },
                            { "data": "Office" },
                            { "data": "Age" },
                            { "data": "StartDate" }
                        ]
                });
            });
        </script>
            }
    </div>
    
</div>